{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "test"
  },
  "include": [
    "*.ts",
    "test/**/*.ts",
    "ignition/**/*.ts",
    "secrets/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
